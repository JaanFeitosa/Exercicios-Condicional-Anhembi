import java.util.Scanner;

class Main {
  public static void main(String[] args) {
  
  int numero;
    
    System.out.println("\nExercicio 4\n");
    Scanner sc = new Scanner(System.in);

    for (int i = 0; i<10; i++){
      System.out.println("Digite um número: ");
      numero = sc.nextInt();

      if(numero % 2 == 0){ /* se o resto da divisão de (numero) por 2 for 0, então é Par caso contrario impar,
         podemos usar também o sinal de != que significa diferente, ou seja, se o resto for != (diferente de 0)
         é Impar*/
        System.out.println("\n" + numero + " é Par!\n");
      }else{
        System.out.println("\n" + numero + " é Impar!\n");
      }
    }
